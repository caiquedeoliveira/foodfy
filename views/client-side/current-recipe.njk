{% extends "client-side/layout.njk" %}

    {% block head%}
    <title>{{items.title}} | Foodfy</title>
    <link rel="stylesheet" href="/styles/recipes.css">
    {% endblock %}

    {% block nav%}
    <a href="/about" class="link-about">Sobre</a>
    <a href="/recipes" class="link-recipes">Receitas</a>
    {% endblock %}

{% block content %}
    <div class="current-recipe">
        <div class="recipe-image">
            <img src="{{ items.image }}" alt="{{ items.title }}"></div>
            <div class="recipe-title">
                <p>{{ items.title }}</p>
            </div>
            <div class="recipe-author">
                <p>por {{ items.author }}</p>
            </div>
    </div>

    <div class="cooking-process">
        <div class="ingredients">
            <div class="text-content">
                <h2>Ingredientes</h2>
                <p>ESCONDER</p>
            </div>
            <ul class="recipe_info">
                {%for ingredients in items.ingredients%}
                <li>{{ingredients}}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="preparation">
            <div class="text-content">
                <h2>Modo de preparo</h2>
                <p>ESCONDER</p>
            </div>
                <ol class="recipe_info">
                    {% for preparation in items.preparation%}
                    <li>{{preparation}}</li>
                    {% endfor%}
                </ol>
        </div>
        <div class="information">
            <div class="text-content">
                <h2>Informações adicionais</h2>
                <p>ESCONDER</p>
            </div>
            <p class="info recipe_info">{{items.information}}</p>
        </div>
    </div>

    <script src="/scripts/current-recipe.js"></script>
    
{% endblock %}