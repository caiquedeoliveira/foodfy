    {% extends "client-side/layout.njk" %}

    {% block head%}
    <title>Receitas | Foodfy</title>
    <link rel="stylesheet" href="/styles/recipes.css">
    {% endblock %}

    {% block nav%}
    <a href="/about" class="link-about">Sobre</a>
    <a href="/recipes" class="link-recipes">Receitas</a>
    {% endblock %}

    {% block content%}
    <div class="wrapper">
        <div class="recipes">
           {%for recipe in recipes%}
            <div class="recipe">
                <div class="recipe-image">
                    <img src="{{recipe.image_url}}" alt="{{recipe.title}}">
                </div>
                <div class="recipe-title">
                    <p>{{recipe.title}}</p>
                </div>
                <div class="recipe-author">
                    <p>por {{recipe.chef}}</p>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>

    {% endblock %}