{% extends "client-side/layout.njk" %}

    {% block head%}
    <title>{{items.title}} | Foodfy</title>
    <link rel="stylesheet" href="/styles/recipes.css">
    {% endblock %}

    {% block nav%}
    <a href="/about" class="link-about">Sobre</a>
    <a href="/recipes" class="link-recipes">Receitas</a>
    {% endblock %}

{% block content %}
    <div class="current-recipe">
        <div class="recipe-presentation">
            <h2>Receita: {{ recipes.title}}</h2>
            <a href="#">Editar receita</a>
        </div>
        <div class="recipe-image">
            <img src="{{ recipes.image_url }}" alt="{{ recipes.title }}"></div>
            <div class="recipe-title">
                <p>{{ recipes.title }}</p>
            </div>
            <div class="recipe-author">
                <p>por {{ recipes.chef }}</p>
            </div>
    </div>

    <div class="cooking-process">
        <div class="ingredients">
            <div class="text-content">
                <h2>Ingredientes</h2>
            </div>
            <ul class="recipe_info">
                {%for ingredients in recipes.ingredients%}
                <li>{{ingredients}}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="preparation">
            <div class="text-content">
                <h2>Modo de preparo</h2>
            </div>
                <ol class="recipe_info">
                    {% for preparation in recipes.preparations%}
                    <li>{{preparation}}</li>
                    {% endfor%}
                </ol>
        </div>
        <div class="information">
            <div class="text-content">
                <h2>Informações adicionais</h2>
            </div>
            <p class="info recipe_info">{{recipes.information}}</p>
        </div>
    </div>
{% endblock %}