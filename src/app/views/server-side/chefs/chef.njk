{% extends "server-side/layout.njk" %}

    {% block head%}
    <title>{{chef.name}} | Foodfy</title>
    <link rel="stylesheet" href="/styles/recipes.css">
    {% endblock %}

{% block content %}
    <div class="current-chef">
        <div class="chef-presentation">
            <h2>Chef: {{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
        </div>
        <div class="chef-image">
            <img src="{{ files[0].src }}" 
                alt="{{ chef.name }}">
        </div>
            <div class="chef-title">
                <p>{{ chef.name }}</p>
            </div>
            <div class="chef-recipes">
                <p>
                {% if chef.total_recipes == 1 %}
                    1 receita
                {% else %}
                    {{chef.total_recipes}} receitas 
                {% endif %}
                </p>
            </div>
    </div>

    <h2 class="admin-chef">Receitas</h2>

        <section class="recipe-adm">

            {% for recipe in recipes %}
            <div class="recipe admin">
                <div class="recipe-image">
                    <img src="{{recipe.img if recipe.img else '//placehold.it/500x200'}}" alt="">
                </div>
                <div class="recipe-info">
                    <div class="recipe-name">
                        <h3>{{recipe.title}}</h3>
                    </div>
                    <div class="recipe-author">
                        <p>por {{chef.name}}</p>
                    </div>
                    <div class="recipe-view">
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </section>
{% endblock %}