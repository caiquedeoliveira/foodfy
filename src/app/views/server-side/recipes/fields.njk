

        <div class="item">
            <legend>Nome da receita</legend>
            <input type="text" name="title" value="{{recipe.title}}">
        </div>

        <div class="item">
            <legend>Chef</legend>
            <select class="select" name="chef">
                <option value="" disabled selected>Selecione um chef</option>
                {% for chef in options %}
                <option value="{{chef.id}}"
                {% if recipe.chef_id == chef.id %} selected {% endif %} >
                    {{chef.name}}
                </option>
                {% endfor %}
            </select>
        </div>