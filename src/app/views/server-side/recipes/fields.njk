        <div class="item">
            <legend>Imagem da receita</legend>
            <div>
                <div id="photos-upload">
                    <input 
                        type="file"
                        name="photos"
                        id="photos-input"
                        multiple
                        accept="image/*"
                        onchange="PhotosUpload.handleFileInput(event)">
                    <div>
                        <i class="material-icons">add</i>
                    </div>
                </div>
                <div id="photos-preview">
                    {% if files %}
                        {% for image in files %}
                            <div class="photo" id="{{image.id}}">
                                <img src="{{image.src}}" alt="{{image.name}}">
                                <i class="material-icons"
                                onclick="PhotosUpload.removeOldPhotos(event)">
                                close</i>
                            </div>
                        {% endfor %}
                        <input type="hidden" name="removed_files">
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="item">
            <legend>Nome da receita</legend>
            <input type="text" name="title" value="{{recipe.title}}">
        </div>

        <div class="item">
            <legend>Chef</legend>
            <select class="select" name="chef">
                <option value="" disabled selected>Selecione um chef</option>
                {% for chef in options %}
                <option value="{{chef.id}}"
                {% if recipe.chef_id == chef.id %} selected {% endif %} >
                    {{chef.name}}
                </option>
                {% endfor %}
            </select>
        </div>